<section class="headtext">
    <h1>Meet your fellow sacrifices
        {{#if city}}
            from
            {{city}}{{/if}}</h1>
    <br />
</section>
<ol id="signers">
    {{#signers}}
        <li>{{#if homepage}}
                <a href="{{homepage}}">{{first_name}}
                    {{last_name}}
                </a>
                {{age}}
                <a href="/signers/{{city}}">{{city}}</a>
            {{else}}
                {{first_name}}
                {{last_name}}
                {{age}}
                <a href="/signers/:city">{{city}}</a>{{/if}}
        </li>
    {{/signers}}
</ol>
<form method="post">
    <input type="submit" value="Edit here" id="submit" />
</form>