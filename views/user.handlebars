<h1>Please {{first}} {{last}} tell us more about yourself!</h1>

<section id="logContainer">
    <form id="login" method="post" min="12" max="120">
        <input
            type="number"
            name="age"
            placeholder="Age"
            class="Input"
            id="ageInput"
        /><input
            type="text"
            name="City"
            placeholder="City"
            class="Input"
            id="cityInput"
        /><input
            type="url"
            name="Url"
            placeholder="https://example.com"
            class="Input"
            id="urlInput"
        />
        <br />
        <input type="submit" value="Continue" id="submit" />
    </form>
    <br />
    <a class="link" href="/petition">If you dont want to give more Info continue here</a>
</section>